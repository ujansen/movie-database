doctype html
head
  //- Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  //- Bootstrap CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' integrity='sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z' crossorigin='anonymous')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet' type='text/css' href='/css/style.css')
  link(rel='icon' href='https://www.flaticon.com/svg/static/icons/svg/3507/3507102.svg' type='image/x-icon')

title Edit #{user.username}
header
  include ../partials/navBar
main.block.container
  div
    h4 Edit #{user.username}:
    hr(style='border-width: 2px;')
    label User ID:
    label#id #{user.id}
    br
    label Username:
    br
    input#username(name='username' disabled value=user.username)
    br
    label About:
    br
    textarea#about(name='about' rows='3' cols='50') #{user.about}
    br
    label Enter Profile Picture Image URL:
    br
    textarea#profilePic(name='profilePic' rows='1' cols='50') #{user.profilePic}
    br
    label Enter Old Password:
    br
    input#oldPassword(name='oldPassword' type="password" required='')
    br
    label Enter New Password:
    br
    input#newPassword(name='newPassword' type="password" required='')
    br
    label Re-enter new Password:
    br
    input#confirmNewPassword(name='confirmNewPassword' type="password" required='')
    br
    br
    button#editUser.btn.btn-outline-primary(type='submit') Update Changes
script(src='/js/editUser.js')
