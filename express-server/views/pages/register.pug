doctype html
head
  //- Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  //- Bootstrap CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' integrity='sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z' crossorigin='anonymous')
  link(rel='stylesheet' type='text/css' href='./css/style.css')
  link(rel='icon' href='https://www.flaticon.com/svg/static/icons/svg/3507/3507102.svg' type='image/x-icon')
title Register
//-body
main(style='background-color: #243742;')
    header
        include ../partials/navBar
    .container
        form.sign_up_form(action='/users', method='POST')
            //- add the path for index.html inside action
            fieldset.form-group
                legend.border-bottom.mb-3 Sign Up
                .form-group
                    label(for='email_address') Username
                    input#username.form-control(name='username' type='text' required='')
                .form-group
                    label(for='email_address') Email address
                    input#emailAddress.form-control(type='email' placeholder='someone@example.com' required='')
                .form-group
                    label(for='password') Password
                    input#password.form-control(name='password' type='password' placeholder='Balrog' required='')
                .form-group
                    label(for='password') Confirm Password
                    input#confirmPassword.form-control(type='password' required='')
                .form-group
                    input#termsAndConditions.mr-2(type='checkbox' value='termsAndConditions')
                    label.mr-1(for='terms_and_conditions')
                        | I agree to the
                    a(href='./tos.html' target='_blank') Terms and Conditions
                button#register.btn.btn-outline-primary(type='submit') Sign Up
                .border-top.mt-3.pt-4
                    small.text-muted
                        | Already Have An Account?
                        a.ml-2(href='/login') Login Now!
script(src='/js/scriptRegister.js')